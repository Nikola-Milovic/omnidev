---
/**
 * QuickStart - Interactive install command section with package manager tabs
 */
---

<div class="od-quickstart">
	<div class="od-quickstart__header">
		<div class="od-quickstart__tabs" role="tablist">
			<button class="od-quickstart__tab od-quickstart__tab--active" data-pm="npm" role="tab" aria-selected="true">
				npm
			</button>
			<button class="od-quickstart__tab" data-pm="bun" role="tab" aria-selected="false">
				bun
			</button>
			<button class="od-quickstart__tab" data-pm="pnpm" role="tab" aria-selected="false">
				pnpm
			</button>
		</div>
	</div>

	<div class="od-quickstart__terminal">
		<div class="od-quickstart__terminal-header">
			<div class="od-quickstart__terminal-dots">
				<span></span>
				<span></span>
				<span></span>
			</div>
			<div class="od-quickstart__terminal-title">Terminal</div>
			<div class="od-quickstart__terminal-spacer"></div>
		</div>
		<div class="od-quickstart__code">
			<div class="od-quickstart__code-line">
				<span class="od-quickstart__code-comment"># Install globally</span>
			</div>
			<div class="od-quickstart__code-line">
				<span class="od-quickstart__code-prompt">$</span>
				<span class="od-quickstart__code-command" id="install-cmd">npm install -g @omnidev-ai/cli</span>
			</div>
			<div class="od-quickstart__code-spacer"></div>
			<div class="od-quickstart__code-line">
				<span class="od-quickstart__code-comment"># Initialize in your project</span>
			</div>
			<div class="od-quickstart__code-line">
				<span class="od-quickstart__code-prompt">$</span>
				<span class="od-quickstart__code-command">cd your-project</span>
			</div>
			<div class="od-quickstart__code-line">
				<span class="od-quickstart__code-prompt">$</span>
				<span class="od-quickstart__code-command">omnidev init</span>
			</div>
			<div class="od-quickstart__code-spacer"></div>
			<div class="od-quickstart__code-line">
				<span class="od-quickstart__code-comment"># Verify setup</span>
			</div>
			<div class="od-quickstart__code-line">
				<span class="od-quickstart__code-prompt">$</span>
				<span class="od-quickstart__code-command">omnidev doctor</span>
			</div>
			<div class="od-quickstart__code-line od-quickstart__code-line--output">
				<span class="od-quickstart__code-success">âœ“</span>
				<span class="od-quickstart__code-output">Everything looks good!</span>
			</div>
		</div>
	</div>

	<div class="od-quickstart__footer">
		<a href="/getting-started/" class="od-btn od-btn--primary od-btn--lg">
			Read the Docs
			<svg
				xmlns="http://www.w3.org/2000/svg"
				width="18"
				height="18"
				viewBox="0 0 24 24"
				fill="none"
				stroke="currentColor"
				stroke-width="2.5"
				stroke-linecap="round"
				stroke-linejoin="round"
				aria-hidden="true"
			>
				<path d="M5 12h14" />
				<path d="m12 5 7 7-7 7" />
			</svg>
		</a>

	</div>
</div>

<script>
	const tabs = document.querySelectorAll(".od-quickstart__tab");
	const installCmd = document.getElementById("install-cmd");

	const commands: Record<string, string> = {
		npm: "npm install -g @omnidev-ai/cli",
		bun: "bun install -g @omnidev-ai/cli",
		pnpm: "pnpm add -g @omnidev-ai/cli",
	};

	tabs.forEach((tab) => {
		tab.addEventListener("click", () => {
			tabs.forEach((t) => {
				t.classList.remove("od-quickstart__tab--active");
				t.setAttribute("aria-selected", "false");
			});
			tab.classList.add("od-quickstart__tab--active");
			tab.setAttribute("aria-selected", "true");
			const pm = tab.getAttribute("data-pm");
			if (installCmd && pm && commands[pm]) {
				installCmd.textContent = commands[pm];
			}
		});
	});
</script>
